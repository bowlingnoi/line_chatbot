# Server Configuration
PORT=3000
NODE_ENV=development

# LINE Messaging API Credentials
# Get these from LINE Developers Console: https://developers.line.biz/console/
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token_here
LINE_CHANNEL_SECRET=your_channel_secret_here

# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# Testing Mode
# Set to true to use mock responses without OpenAI API
TEST_MODE=false

# Tracking API Configuration
# Set to false to use mock tracking data instead of real API
USE_REAL_TRACKING_API=true
TRACKING_API_ENDPOINT=https://api-bi.my-group.net/v1/callback-gateway/express/trackings

# FAQ Configuration
FAQ_FILE_PATH=./data/faq.md

# Intent Classification
INTENT_CONFIDENCE_THRESHOLD=0.7

# Logging
LOG_LEVEL=info
